<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head_css %>
    <meta charset="UTF-8">
  </head>

  <body>
  <%= erb :header %>
  <%= erb :navbar %>
  <header>
<br>
      <h3 align="center">
        MakersBnB Spaces
      </h3><br>
      <h4 align="center">Spaces available for <%= @date %></h4>
    </header>

    <main>
      <div id="master" style="width: 90%; margin: 0 auto;">
        <div class="row">
        <% @spaces.each do |entry| %>
            <div class="col-sm-6">
              <div class="card" style="margin-bottom: 30px;">
                <div class="card-body">
                  <ul>
                    <h5 class="card-title"><%= entry.name %></h5>
                    <p class="card-text"><%= entry.description %></p>
                    <p class="card-text">Location: <%= entry.location %>
                    <br>Price: Â£<%= entry.price %>
                    <% user = User.find(id: entry.user_id) %>
                    <br>Host: <%= user.name %></p>
                    <% if @date %>
                    <p align="center"><form action="/request_confirmation/<%=entry.id%>" method="get">
                    <input type="submit" value="Request Space" class="btn btn-lg btn-primary btn-block" style="background-color: #20B2AA; border: 0px;"></form></p>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>


<!--              <input type="submit" value="Request Property">-->

          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>
