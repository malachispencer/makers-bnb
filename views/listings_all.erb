<!DOCTYPE html>
<html lang="en">
<head>
  <%= erb :head_css %>
  <meta charset="UTF-8">
</head>

<body>
  <%= erb :header %>
  <% if @user %>
    <%= erb :navbar %>
  <% end %>
<header>
  <br>
  <h3 align="center">
    Listed Spaces
  </h3><br>
</header>

<main>
  <% if @spaces.length == 0 %>
    <div class="card mt-4 mb-4" style="margin: 0 auto; width: 30%;">
      <div class="card-body text-center">
        No listings currently available
      </div>
    </div>
  <% else %>
    <div id="master" style="width: 90%; margin: 0 auto;">
      <div class="row">
        <% @spaces.each do |space_hash| %>
          <div class="col-sm-6">
            <div class="card" style="margin-bottom: 30px;">
              <div class="card-body">
                <ul>
                  <h5 class="card-title"><%= space_hash[:space].name %></h5>
                  <p class="card-text"><%= space_hash[:space].description %></p>
                  <p class="card-text">Location: <%= space_hash[:space].location %>
                    <br>Price: Â£<%= space_hash[:space].price %>
                    <br>Host: <%= space_hash[:host_name] %></p>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</main>
<% if !@user %>
  <div>
    <p align="center"><a href="/">Sign up</a> to book or list a space</p>
  </div>
<% end %>
</body>
</html>